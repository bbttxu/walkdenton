doctype 5
html
  head
    title WalkDenton
    meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
    link(rel='stylesheet', href='/stylesheets/vendor/foundation/foundation.css' + cachebust)
    link(rel='stylesheet', href='/stylesheets/vendor/leaflet/leaflet.css' + cachebust)
    link(rel='stylesheet', href='/stylesheets/style.css' + cachebust)
    link(rel='stylesheet', href='/stylesheets/map.css' + cachebust)

    if reload
      script(src='/socket.io/socket.io.js')
      script(src='/javascripts/reload-client.js')

    if optimize
      script(src='/javascripts/main-built.js')
    else
      script(src='/javascripts/vendor/requirejs/require.js', data-main='/javascripts/main.js')

  body
    .off-canvas-wrap
      .inner-wrap
    .contain-to-grid
      nav.top-bar(data-topbar)
        ul.title-area
          li.name
            h1
              a(href="/") Walk Denton
          li.toggle-topbar.menu-icon
            a(href="#")
              span Menu

        section.top-bar-section
          ul.right
            li
              a( href="#/food") Food
            li
              a( href="http://github.com/bbttxu/walkdenton") bbttxu/walkdenton

    block content

    #food.container.primary
      .row
        .small-12.medium-6.medium-push-6.columns
          h3 Tags
          ul.inline-list.tags(data-bind="foreach: tags")
            li
              a.toggle.button.tiny(data-bind="text: name")

        .small-12.medium-6.medium-pull-6.columns
          h1
            | Food
            small(data-bind="text: filterTags().join('|')")
          ul.foods.small-block-grid-2.large-block-grid-3(data-bind="foreach: filtered")
            li(data-bind="text: name")

    #footer
      .container
        .row
          .small-12.columns
